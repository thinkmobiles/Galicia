<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tv_title_goods_IS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/abc_button_padding_horizontal_material"
            android:layout_marginBottom="@dimen/abc_button_padding_horizontal_material">

            <ImageView
                android:id="@+id/iv_refresh_shop_item_IS"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/refresh"
                android:visibility="invisible"
                />

            <ImageView
                android:id="@+id/iv_delete_shop_item_IS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/btn_delete" />

            <ImageView
                android:id="@+id/iv_see_detail_shop_item_IS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/btn_circle_see" />

            <ImageView
                android:id="@+id/iv_send_shop_item_IS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/btn_circle_send"
                android:layout_marginLeft="@dimen/abc_control_inset_material"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>