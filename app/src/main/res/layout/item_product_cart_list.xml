<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/ivPrevProduct"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/tv_title_goods_IS"
            android:layout_width="wrap_content"
            android:textSize="24dp"
            android:layout_height="wrap_content"
            android:gravity="clip_vertical"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/abc_button_padding_horizontal_material"
            android:layout_marginBottom="@dimen/abc_button_padding_horizontal_material">



            <ImageView
                android:id="@+id/iv_delete_shop_item_IS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/btn_delete" />



            <ImageView
                android:id="@+id/iv_send_shop_item_IS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/btn_circle_send"
                android:layout_marginLeft="@dimen/abc_control_inset_material"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>