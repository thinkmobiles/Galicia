<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/llAppContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_title_height"
        android:gravity="center_vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivMenu"
                android:src="@drawable/btn_menu"
                android:layout_marginLeft="65dp"
                android:layout_marginRight="@dimen/action_bar_menu_icon_margin" />
            <TextView
                android:id="@+id/tvMenuTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:textSize="@dimen/action_bar_title_txt"
                android:textAllCaps="true"
                android:text="Title"
                android:gravity="center_vertical" />
        </LinearLayout>
        <ImageView
            android:layout_weight="4"
            android:id="@+id/tvLogoTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo_nacional"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:scaleType="fitCenter" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/action_bar_bottom_margin">
    </FrameLayout>
</LinearLayout>