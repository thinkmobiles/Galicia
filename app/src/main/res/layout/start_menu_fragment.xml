<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:id="@+id/llContentList_AM">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/contMenu"
            android:layout_alignRight="@+id/contMenu"
            android:layout_marginBottom="@dimen/default_small_margin"
            android:id="@+id/llCompania"
            android:layout_alignParentTop="true">
            <View
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_weight="2"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <View
                    android:layout_width="match_parent"
                    android:background="@android:color/white"
                    android:layout_height="@dimen/devider_height"/>
                <TextView
                    android:id="@+id/tvCompania"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/item_compania_padding_top_bottom"
                    android:paddingBottom="@dimen/item_compania_padding_top_bottom"
                    android:gravity="center_horizontal"
                    android:text="@string/compania"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/item_compania_text_size"/>
                <View
                    android:layout_width="match_parent"
                    android:background="@android:color/white"
                    android:layout_height="@dimen/devider_height"/>
            </LinearLayout>
            <View
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_weight="2"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>