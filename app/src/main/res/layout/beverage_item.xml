<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle_BI"
        style="@style/TitleStyle"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.galicia.galicia.custom.custom_list.ItemListBeverage
            android:id="@+id/vDescription_BI"
            android:background="@android:color/white"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:gravity="center"/>

        <View
            android:id="@+id/gradientView"
            android:layout_width="@dimen/gradient_view_size"
            android:layout_height="0dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/horizontal_gradient_shape"
            android:paddingBottom="@dimen/menu_item_size_txt"
            android:layout_alignTop="@+id/vDescription_BI"
            android:layout_alignBottom="@+id/vDescription_BI"
            android:visibility="gone"
            >

        </View>

    </RelativeLayout>



</LinearLayout>