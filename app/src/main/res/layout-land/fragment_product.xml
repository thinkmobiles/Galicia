<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3" android:id="@+id/llCompanyLogo_FPU"
        android:background="@android:color/white"
        android:padding="@dimen/default_padding">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ivCompanyLogo_FPU"
            android:src="@drawable/logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:id="@+id/llDetailContainer_FPU"
        android:background="@android:color/white"
        android:padding="@dimen/default_padding">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivFichaCata_FPU"
                android:src="@drawable/selector_btn_cata"
                android:layout_toRightOf="@+id/ivAddProduct_FPU"
                android:layout_toEndOf="@+id/ivAddProduct_FPU"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@+id/ivAddProduct_FPU" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivAddProduct_FPU"
                android:src="@drawable/selector_btn_add_envio"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ivAddProduct_FPU">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/hlvAllProduct_FPU"
                    android:id="@+id/svDescriptionContainer_FPU"
                    android:layout_below="@+id/ivAddProduct_FPU"
                    android:layout_weight="1">

                    <WebView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/wvProductDescription_FPU"
                        android:focusableInTouchMode="false"
                        android:textColor="@android:color/black" />
                </ScrollView>

                <com.galicia.galicia.custom.HorizontalListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/hlvAllProduct_FPU"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:fillViewport="false"
                    android:layout_weight="2">

                </com.galicia.galicia.custom.HorizontalListView>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/llMoreDetailContainer_FPU"
        android:layout_weight="3"
        android:backgroundTint="@android:color/white"
        android:padding="@dimen/default_padding">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@android:color/white">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lvProductVideo_FPU"
                android:layout_weight="1" />

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:id="@+id/rlProductPhoto_FPU"
                android:background="@android:color/white">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ivProductPhoto_FPU"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+id/tvThirdProductTitle_FPU"
                    android:layout_alignParentTop="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvThirdProductTitle_FPU"
                    android:padding="10dp"
                    android:layout_alignParentBottom="true"
                    android:textColor="@android:color/black"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:singleLine="false"
                    android:gravity="center_horizontal" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>